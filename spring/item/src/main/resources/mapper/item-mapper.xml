<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.green.item.mapper.ItemMapper">

    <!-- 결과 매핑 -->
    <resultMap id="itemMap" type="com.green.item.dto.ItemDTO">
        <id column="ITEM_NUM" property="itemNum"/>
        <result column="ITEM_NAME" property="itemName"/>
        <result column="ITEM_PRICE" property="itemPrice"/>
        <result column="ITEM_DESCRIPTION" property="itemDescription"/>
        <result column="CREATE_DATE" property="createDate"/>
    </resultMap>

    <!-- 상품 등록 -->
    <insert id="insertItem" parameterType="com.green.item.dto.ItemDTO">
        INSERT INTO ITEM (
            ITEM_NAME,
            ITEM_PRICE,
            ITEM_DESCRIPTION
        ) VALUES (
            #{itemName},
            #{itemPrice},
            #{itemDescription}
        )
    </insert>

    <!-- 상품 목록 조회 (최근 등록 순) -->
    <select id="getItemList" resultMap="itemMap">
        SELECT
            ITEM_NUM,
            ITEM_NAME,
            ITEM_PRICE,
            ITEM_DESCRIPTION,
            CREATE_DATE
        FROM ITEM
        ORDER BY CREATE_DATE DESC
    </select>


</mapper>
