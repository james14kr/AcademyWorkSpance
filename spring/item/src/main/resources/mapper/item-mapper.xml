<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.green.item.mapper.ItemMapper">

    <resultMap id="" type="com.green.item.dto.itemDTO">
        <id column="ITEM_NUM" property="itemNum"/>
        <id column="ITEM_NAME" property="itemName"/>
        <id column="ITEM_PRICE" property="ItemPrice"/>
        <id column="REG-DATE" property="regDate"/>
        <id column="ITEM_INTRO" property="itemIntro"/>
    </resultMap>
    
    <insert id="insertItem">
        INSERT INTO ITEM (
            ITEM_NAME
            ,ITEM_PRICE
            ,ITEM_INTRO
        )VALUES (
            #{itemName}
            , #{itemPrice}
            , #{itemIntro}
        )
    </insert>

    <select id="selectItemList" resultMap="item">
        SELECT ITEM_NUM
            ,ITEM_NAME
            ,ITEM_PRICE
            ,REG_DATE
        FROM ITEM
        ORDER BY REG_DATE DESC
    </select>

</mapper>





























