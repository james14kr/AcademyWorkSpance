<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.green.item.mapper.ItemMapper">

    <resultMap id="item" type="com.green.item.dto.ItemDTO">
        <id column="ITEM_NUM" property="itemNum"/>
        <result column="ITEM_NAME" property="itemName"/>
        <result column="ITEM_PRICE" property="itemPrice"/>
        <result column="REG_DATE" property="regDate"/>
        <result column="ITEM_INTRO" property="itemIntro"/>
    </resultMap>
    
    <insert id="insertItem">
        INSERT INTO ITEM (
            ITEM_NAME
            ,ITEM_PRICE
            ,ITEM_INTRO
        )VALUES (
            #{itemName}
            , #{itemPrice}
            , #{itemIntro}
        )
    </insert>

    <select id="selectItemList" parameterType="com.green.item.dto.ItemDTO" resultMap="item">
        SELECT ITEM_NUM
            ,ITEM_NAME
            ,ITEM_PRICE
            ,REG_DATE
        FROM ITEM
        ORDER BY REG_DATE DESC
    </select>

    <update id="updateItem">
        UPDATE ITEM
        SET
            ITEM_NAME = #{itemName}
            ,ITEM_PRICE = #{itemPrice}
        WHERE ITEM_NUM = #{itemNum}
    </update>

</mapper>





























